<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff000000"
    android:orientation="vertical"
    tools:context=".XYChartBuilder" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >
        
        <Spinner
            android:id="@+id/areaSelect"
            android:layout_width="76dp"
            android:layout_height="38dp" />

        <Button
            android:id="@+id/pricesComp"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:onClick="displayComparison"
            android:text="Price" />

        <Button
            android:id="@+id/crimeComp"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:onClick="displayComparison"
            android:text="Crime" />

        <Button
            android:id="@+id/populationComp"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:onClick="displayComparison"
            android:text="Population" />

        <Button
            android:id="@+id/treesComp"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:onClick="displayComparison"
            android:text="Tree" />

        <RadioButton
            android:id="@+id/home_button"
            style="@style/main_tab_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2.0dip"
            android:layout_weight="0.45"
            android:drawableTop="@drawable/icon_1_n"
            android:onClick="menuButton"
            android:text="@string/main_home" >
        </RadioButton>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/prices_chart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0" >

    </LinearLayout>
</LinearLayout><!-- From: file:/Users/zyh/Documents/Android%20App/MainActivity1/app/src/main/res/layout/activity_population_chart_builder.xml -->