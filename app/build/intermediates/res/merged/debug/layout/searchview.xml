<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3D3D3"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/housePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" House Prices: (GBP in million)"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <requestFocus />

        <EditText
            android:id="@+id/housePrice_Min"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="0 ~ 1.5"
            android:inputType="numberDecimal" >
        </EditText>

        <TextView
            android:id="@+id/To1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="   to"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/housePrice_Max"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="0 ~ 1.5"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <TextView
        android:id="@+id/crimeNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Crime Numbers: (thousand)"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/crimeNum_Min"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="0 ~ 90"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/To2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="    to"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/crimeNum_Max"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="0 ~ 90"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <TextView
        android:id="@+id/population"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Population: (million)"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/population_Min"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="0 ~ 0.4"
            android:inputType="numberDecimal" >
        </EditText>

        <TextView
            android:id="@+id/To3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="   to"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/population_Max"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="0 ~ 0.4"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <TextView
        android:id="@+id/tree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Tree Numbers: (thousand)"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/tree_Min"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="0 ~ 40"
            android:inputType="numberDecimal" >
        </EditText>

        <TextView
            android:id="@+id/To4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="   to"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/tree_Max"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="0 ~ 40"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/searchBtn"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/search_button" />
    </RelativeLayout>

</LinearLayout><!-- From: file:/Users/zyh/Documents/Android%20App/MainActivity1/app/src/main/res/layout/searchview.xml -->